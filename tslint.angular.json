{
  "rulesDirectory": ["node_modules/codelyzer"],
  "extends": ["angular-tslint-rules", "tslint-config-prettier"],
  "rules": {
    "whitespace": [true, "check-module"],
    "templates-no-negated-async": false,
    "template-i18n": [
      true,
      "check-id",
      "check-text",
      {
        "blacklist": ["mat-icon"]
      }
    ],
    "no-forward-ref": false,
    "template-no-call-expression": false,
    "no-unused-css": false,
    "template-conditional-complexity": false,
    "template-cyclomatic-complexity": false,
    "use-view-encapsulation": false,
    "directive-selector": [true, "attribute", ["fs", "routerLink"], "kebab-case"],
    "component-selector": [true, "element", ["fs", "i18n", "app", "router"], "kebab-case"]
  }
}
